<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # 1. Paksa HTTPS (Biar Google percaya web abang aman)
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # 2. Sembunyikan .php di URL (Biar URL cantik/SEO Friendly)
    # Contoh: mglstiker.com/galeri bukannya mglstiker.com/galeri.php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^([^\.]+)$ $1.php [NC,L]

    # 3. Rule untuk Sitemap
    RewriteRule ^sitemap\.xml$ sitemap.php [L]

    # 4. Blokir akses ke folder includes (Keamanan)
    RewriteRule ^includes/.*$ - [F,L]
</IfModule>

# Caching Gambar (Biar loading web kenceng, Google suka web kenceng)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
</IfModule>
